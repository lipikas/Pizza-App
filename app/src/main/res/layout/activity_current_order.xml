<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentOrder">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="382dp"
        android:layout_height="300dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_height="100dp"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:src="@drawable/imgbroken" />

            <TextView
                android:id="@+id/pizzaType"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:paddingTop="60dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_height="80dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:text="@string/text_view1"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/sizeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2" />

        </TableRow>

        <TableRow
            android:layout_width="354dp"
            android:layout_height="91dp"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_column="1"
                android:paddingLeft="10dp"
                android:text="@string/text_view2"
                android:textColor="@color/purple_700"
                android:textSize="15sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_column="1"
                android:text="@string/text_view3"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="15sp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="355dp"
        android:layout_height="387dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow android:layout_height="300dp">

            <ListView
                android:id="@+id/allToppings"
                android:layout_width="147dp"
                android:layout_height="258dp"
                android:layout_column="1" />

            <TableLayout
                android:layout_width="80dp"
                android:layout_column="2">

                <TableRow
                    android:layout_height="200dp"
                    android:paddingTop="80dp">

                    <Button
                        android:id="@+id/addButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="addTopping"
                        android:text="@string/button_text6"
                        android:textSize="10sp" />

                </TableRow>

                <TableRow
                    android:layout_height="400dp"
                    android:paddingTop="50dp">

                    <Button
                        android:id="@+id/removeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="removeTopping"
                        android:text="@string/button_text7"
                        android:textSize="10sp" />

                </TableRow>

            </TableLayout>

            <ListView
                android:id="@+id/selectedToppings"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_column="3" />

        </TableRow>

        <TableRow android:paddingTop="30dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:text="@string/text_view4"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/priceTextField"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="1"
                android:paddingRight="30dp"
                android:text="@string/text_view5"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:onClick="addOrder"
                android:text="@string/button_text8"
                android:textSize="10sp" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>